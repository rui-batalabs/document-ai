<header class="bg-blue-500 text-white py-4">
    <div class="container mx-auto flex justify-between items-center">
        <!-- Profile Picture -->
        <div class="flex items-center">
            <div class="relative group">
                <img id="profile-picture"
                     src="{{#if user.profile_picture}}{{user.profile_picture}}{{else}}/noProfilePicture.jpg{{/if}}"
                     alt="Profile Picture"
                     class="profile-img w-10 h-10 rounded-full cursor-pointer border-2 border-white hover:border-gray-300" />
            </div>
            <a href="/dashboard" class="ml-3 text-lg font-semibold hover:underline">Document AI</a>
        </div>

        <!-- Navigation Links -->
        <div>
            <a href="/dashboard" class="text-white hover:underline px-4">Home</a>
            <a href="/passwordreset" id="password-link" class="text-white hover:underline px-4">Change Password</a>
            <a href="/signout" id="logout-link" class="text-white hover:underline px-4">Sign Out</a>
        </div>
    </div>
</header>

<!-- Modal for Avatar Upload -->
<div id="avatar-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
    <div class="bg-white rounded-lg shadow-lg p-6 w-1/3">
        <h2 class="text-xl font-semibold mb-4">Upload New Avatar</h2>
        <form id="avatar-upload-form" enctype="multipart/form-data">
            <input id="avatar-input" type="file" name="avatar" accept="image/*" required
                   class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
            <button type="button" id="upload-avatar-btn"
                    class="mt-4 bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-500">
                Upload
            </button>
        </form>
        <button id="close-modal" class="mt-4 text-red-500 hover:underline">Cancel</button>
    </div>
</div>
